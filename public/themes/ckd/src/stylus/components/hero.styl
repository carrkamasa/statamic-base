.hero
	height 540px
	position relative
	margin-bottom -120px
	background-size cover
	background-position center center
	overflow hidden

	@media (max-width 850px)
		height 480px
	

	&::before
		position absolute
		content ""
		width 100%
		height 100%
		background-color $black
		opacity 0.85
	

	&__video
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		z-index -1

		video
			position absolute
			top 50%
			left 50%
			width auto
			height auto
			min-height 100%
			min-width 100%
			transform translate(-50%, -50%)

			img
				width 100%
				height 100%
			
		
	

	h1
		width 100%
		margin-top -60px
	

	h2
		max-width 460px
	

	.inner
		height 100%
	
