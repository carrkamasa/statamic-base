.slider 
    background-color $black
    margin 50px 0
    padding 50px 0
    width 100%
	height 500px

    p
        color #fff
        text-align center

	.slide 
		background-size cover
		background-position center center
		height 500px

/* Arrows */
.slick-arrow
	z-index 10
	width 22px
	height 40px
	background-size cover
	background-color transparent
	opacity 0.5
	transition opacity 0.3s ease

	&:hover
		outline none
		opacity 1

.slick-prev
	left 25px
	background-image url("../images/slider-left-arrow.svg")

.slick-next
	right 25px
	background-image url("../images/slider-right-arrow.svg")

.slick-prev,
.slick-next
	position absolute
	display block
	cursor pointer
	top 50%
	transform translate(0, -50%)
	color transparent
	border none
	outline none

.slick-dots
	position absolute
	bottom 25px
	list-style none
	display block
	text-align center
	padding 0
	margin 0
	width 100%

	li
		position relative
		display inline-block
		border-radius 50%
		margin 0 5px
		padding 0
		cursor pointer

		button
			border 0
			background-color rgba(255, 255, 255, 0.5)
			display block
			height 16px
			width 16px
			border-radius 50%
			outline none
			line-height 0
			font-size 0
			cursor pointer
			transition background-color 0.3s ease

			&:hover,
			&:focus
				outline none
				background-color rgba(255, 255, 255, 0.8)
			
		&.slick-active button
			background-color rgba(255, 255, 255, 1)