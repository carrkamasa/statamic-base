.card {
	position: relative;
	border-radius: 5px;
	background-color: #fff;
	border-bottom: 3px solid $primary;
	overflow: hidden;
	margin-bottom: 30px;

	&__solid {
		background-color: $primary;
		border: 0;

		h1,
		h2,
		h3,
		p,
		span {
			color: #fff;
		}
	}

	&__image-small {
		width: 100%;
		height: 205px;
	}

	&__image-large {
		width: 100%;
		height: 310px;

		@media (max-width: 600px) {
			height: 250px;
		}

		@media (max-width: 500px) {
			height: 200px;
		}
	}

	&__body {
		position: relative;
		padding: 30px;
		transition: background-color 0.3s ease;
	}

	&__icon {
		position: absolute;
		top: -28px;
		left: 0;
		right: 0;
		margin: 0 auto;
		width: 55px;
		height: 55px;
		border-radius: 50%;
		background-color: $primary;

		img {
			position: absolute;
			top: 50%;
			left: 0;
			right: 0;
			margin: 0 auto;
			height: 30px;
			transform: translateY(-50%);
		}
	}

	&__with-button {
		padding-bottom: 100px;
	}

	&__button {
		position: absolute;
		width: 100%;
		bottom: 30px;
		text-align: center;
		padding: 0 30px;
	}

	h3 {
		margin-top: 0;
	}

	li {
		color: $grey;
		padding-left: 0;
		text-indent: -19px;
		list-style-type: none;
		margin-bottom: 15px;

		&::before {
			position: relative;
			top: -1px;
			content: "â€¢ ";
			color: $primary;
			font: 300 16px/20px $circular;
			margin-right: 5px;
		}
	}
}

a.card {
	display: block;
	text-decoration: none;
	color: $black;

	&:hover {
		transform: translateY(-5px);

		.card__body {
			background-color: $primary;
			color: #fff;

			p,
			a,
			h1,
			h2,
			h3 {
				color: #fff;
			}
		}
	}
}
