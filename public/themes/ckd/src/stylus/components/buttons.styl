.button {
	position: relative;
	color: #fff;
	font: 700 12px/1 $circular;
	transition: all 0.3s ease;
	padding: 20px 25px 19px;
	border-radius: 5px;
	text-decoration: none;
	text-transform: uppercase;
	letter-spacing: 1px;
	cursor: pointer;
	display: inline-block;
	margin-top: 10px;
	background-color: $primary;

	&::after {
		position: relative;
		content: "â†’";
		top: -1px;
		margin-left: 8px;
		transition: margin 0.3s ease;
	}

	&:hover {
		background-color: lighten($primary, 10);
		color: #fff;
		padding-right: 20px;

		&::after {
			margin-left: 13px;
		}
	}

	&__white {
		background-color: #fff;
		color: $primary;
	}

	&__bottom {
		position: absolute;
		bottom: 30px;
		left: 30px;
	}

	&__full-width {
		width: 100%;
		text-align: center;
	}
}

.back-button {
	margin: -30px 0 60px 0;

	&__wrapper {
		lost-column: 2/3 3 30px;
		text-align: center;
	}

	.inner {
		display: flex;
	}
}
