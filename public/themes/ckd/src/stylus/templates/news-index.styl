.group-news
	&__post-list
		display flex;
		flex-wrap wrap;

		.card
			flex 0 0 calc(50% - 15px);
			max-width calc(50% - 15px);
			width calc(50% - 15px);

			@media (max-width 900px)
				lost-column 1/1 1 30px;
			

			&:first-child
				flex 0 0 100%;
				max-width 100%;
				width 100%;

				@media (max-width 900px)
					lost-column 1/1 1 30px;
				

				.card
					&__image-large
						width 50%;
						height 100%;
						float right;

						@media (max-width 900px)
							width 100%;
							height 310px;
						

						@media (max-width 600px)
							height 250px;
						

						@media (max-width 500px)
							height 200px;
						
					

					&__body
						width 50%;
						height 100%;
						float left;

						@media (max-width 900px)
							width 100%;
							height auto;
							float left;
						
					

					&__excerpt
						display block;
					
				
			

			&:nth-child(3),
			&:nth-child(5)
				margin-left auto;
			

			&:hover
				.button
					background-color lighten($primary, 10);
				
			

			&__body
				&--date
					font 700 14px/23px $circular;
					margin 0;
					transition color 0.3s ease;
				

				&--title
					font 700 18px/23px $circular;
					margin-bottom 0;
					transition color 0.3s ease;
					max-width 425px;

					a
						color $black;
					
				

				&--excerpt
					margin 0 0 15px;
				
			

			&__excerpt
				display none;
			

			.button
				margin-top 60px;
			
		
	
